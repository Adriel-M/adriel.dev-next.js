{
  "name": "tailwind-nextjs-starter-blog",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "INIT_CWD=$PWD next dev",
    "dev:with-tina": "TINA_PUBLIC_IS_LOCAL=true tinacms dev -c \"next dev\"",
    "build": "yarn run build:conditionaltinacms && next build",
    "build:tinacms": "tinacms build",
    "build:conditionaltinacms": "bash scripts/build-tinacms.sh",
    "serve": "next start",
    "analyze": "ANALYZE=true next build",
    "lint": "next lint --fix --dir app --dir components --dir lib --dir layouts --file contentlayer.config.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@docsearch/react": "3.6.0",
    "@primer/octicons": "^19.9.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@vercel/speed-insights": "^1.0.10",
    "autoprefixer": "^10.4.19",
    "compromise": "^14.12.0",
    "contentlayer-temp": "^0.4.4",
    "esbuild": "^0.20.2",
    "feed": "^4.2.2",
    "github-slugger": "^2.0.0",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "mdx-bundler": "^10.0.2",
    "next": "14.1.4",
    "next-compose-plugins": "^2.2.1",
    "next-contentlayer-temp": "^0.4.4",
    "postcss": "^8.4.38",
    "probe-image-size": "^7.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-obfuscate-email": "1.1.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remove-markdown": "^0.5.0",
    "sharp": "^0.33.3",
    "tailwindcss": "^3.4.1",
    "tinacms": "^1.6.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.1.4",
    "@svgr/webpack": "8.1.0",
    "@tinacms/cli": "1.5.42",
    "@types/mdx": "2.0.12",
    "@types/node": "20.11.30",
    "@types/primer__octicons": "19.6.3",
    "@types/probe-image-size": "7.2.4",
    "@types/react": "18.2.72",
    "@types/remove-markdown": "0.3.4",
    "@types/webpack-env": "1.18.4",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "eslint-plugin-unused-imports": "3.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.13",
    "typescript": "5.4.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.1.1"
}
